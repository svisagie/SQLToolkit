{
    "id": "a87fee27-c101-4a5a-b236-661a390dec86",
    "name": "RunSqlCommand",
    "friendlyName": "MiX Telematics Run SQL Command",
    "description": "Allows you to run a SQL Command",
    "author": "MiX Telematics",
    "category": "Utility",
    "version": {
        "Major": "2",
        "Minor": "1",
        "Patch": "3"
    },
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "minimumAgentVersion": "1.83.0",
    "inputs": [
        {
            "name": "serverName",
            "type": "string",
            "label": "Server Name",
            "required": true,
            "helpMarkDown": "Instance name of the SQL Server"
        },
        {
            "name": "databaseName",
            "type": "string",
            "label": "Database Name",
            "required": true
        },
        {
            "name": "sqlCommand",
            "type": "multiLine",
            "label": "SQL Command",
            "required": true
        },
        {
            "name": "userName",
            "type": "string",
            "label": "SQL Server Login",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "Login using SQL Authentication. Otherwise uses the login the build agent service runs under"
        },
                {
            "name": "userPassword",
            "type": "string",
            "label": "SQL Server Authentication password",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "Password for SQL Authenication. You should use a secret variable here."
        },
        {
            "name": "queryTimeout",
            "type": "string",
            "label": "Query Timeout",
            "required": true,
            "defaultValue": "30",
            "groupName": "advanced"
        }
    ],
    "instanceNameFormat": "Run Sql Command on $(databaseName)",
    "execution": {
        "PowerShell3": {
            "target": "RunSqlCommand.ps1"}
    }
}